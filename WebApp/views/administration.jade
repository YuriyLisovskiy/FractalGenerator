extends includes/layout

block title
	title Fractals Generator | Administration

block head
	link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
	link(rel="stylesheet", href="/static/css/administration.css")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")

block body
	div(class="page-title create-task-btn")
		a(class="btn btn-success page-title", href="/user/create/fractal") Create Task
	div(class="container")
		h3(class="admin-title") Administration
		ul(class="nav nav-tabs", role="tablist")
			li(class="nav-item")
				a(class="nav-link active", id="tasks-tab", data-toggle="tab", href="#tasks") Tasks
		div(class="tab-content")
			div(id="tasks", class="container tab-pane active")
				br
				table(class="table")
					thead(class="thead-dark")
						tr
							th Id
							th Title
							th Picture Size (px)
							th User
							th Status
							th Progress
							th Server
							th Result
							th
					tbody(id="tasks-tbody")
				button(class="btn btn-secondary", id="show-more-tasks-tab") Load more

block footer
	script(type="module", src="/static/js/administration/tasks.js")
